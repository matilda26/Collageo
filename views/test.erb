<div id="container"></div>
  <script>
    var width = window.innerWidth;
    var height = window.innerHeight;

    var stage = new Konva.Stage({
      container: 'container',
      width: width,
      height: height
    });

    var layer = new Konva.Layer();
    stage.add(layer);

    // darth vader
    var imageOne = new Konva.Image({
        x: 20,
        y: 20,

        // stroke: 'red',
        // strokeWidth: 10,
        draggable: true
    });

    layer.add(imageOne);

    // yoda
    var imageTwo = new Konva.Image({
        x: 240,
        y: 20,
        // width: 93,
        // height: 104,
        draggable: true,
        // stroke: 'red',
        // strokeWidth: 10
    });
    layer.add(imageTwo);


    var imageObj1 = new Image();
    imageObj1.onload = function() {
        imageOne.image(imageObj1);
        layer.draw();
    };
    imageObj1.src = '/images/test_1.jpg';

    var imageObj2 = new Image();
    imageObj2.onload = function() {
        imageTwo.image(imageObj2);
        layer.draw();
    };
    imageObj2.src = '/images/test_2.jpg';


    // use event delegation to update pointer style
    // and apply borders
    layer.on('mouseover', function(evt) {
        var shape = evt.target;
        document.body.style.cursor = 'pointer';
        layer.draw();
    });
    layer.on('mouseout', function(evt) {
        var shape = evt.target;
        document.body.style.cursor = 'default';
        layer.draw();
    });
  </script>
